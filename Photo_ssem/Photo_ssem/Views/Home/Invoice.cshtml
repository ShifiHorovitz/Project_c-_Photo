@* <img src="~/assert/logo.png" alt="Logo" width="100" /> *@
<div id="invoiceModal" class="modal">
    <div class="modal-content">
        <div class="invoice-box">
            <span class="close">&times;</span>
            <h2>חשבונית מס/קבלה</h2>
            <p><strong>תאריך:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
            <hr>

            <table>
                <tr>
                    <td><strong>שם הלקוח:</strong></td>
                    <td>@ViewData["Name"]</td>
                </tr>
                <tr>
                    <td><strong>טלפון:</strong></td>
                    <td>@ViewData["Phone"]</td>
                </tr>
                <tr>
                    <td><strong>מספר הזמנה:</strong></td>
                    <td>@ViewData["OrderCode"]</td>
                </tr>
                <tr>
                    <td><strong>גודל התמונה:</strong></td>
                    <td>@ViewData["Size"]</td>
                </tr>
                <tr>
                    <td><strong>מחיר:</strong></td>
                    <td>₪50</td>
                </tr>
            </table>

            <hr>
            <p class="total"><strong>סה"כ לתשלום: ₪50</strong></p>
            <p class="footer-text">תודה על הרכישה! נשמח לראותך שוב.</p>

            <button onclick="printInvoice()" class="btn-primary">הדפס חשבונית</button>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var modal = document.getElementById("invoiceModal");
        var span = document.getElementsByClassName("close")[0];

        modal.style.display = "block"; // הצגת המודאל אוטומטית

        span.onclick = function () {
            modal.style.display = "none";
        };

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        };
    });

    function printInvoice() {
        window.print();
    }
</script>

<style>
    .modal {
        display: flex;
        align-items: center;
        justify-content: center;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        width: 400px;
        text-align: center;
    }

    .invoice-box {
        font-family: 'Arial', sans-serif;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        background: #f9f9f9;
    }

    h2 {
        color: #333;
        margin-bottom: 10px;
    }

    table {
        width: 100%;
        margin: 10px 0;
        border-collapse: collapse;
    }

    td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    .total {
        font-size: 18px;
        color: #d9534f;
        font-weight: bold;
    }

    .footer-text {
        font-size: 14px;
        color: #555;
        margin-top: 10px;
    }

    .close {
        color: red;
        float: right;
        font-size: 24px;
        font-weight: bold;
        cursor: pointer;
    }

    button {
        background-color: #4CAF50;
        color: white
    }
  </style>
